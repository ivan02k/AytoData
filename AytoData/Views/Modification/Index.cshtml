@model IEnumerable<Data.Entities.Modification>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Generation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyType.Doors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyType.Seats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineModel.Power)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineModel.NumberCylinders)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineModel.FuelType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GearBoxType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Generation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyType.Doors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyType.Seats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineModel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineModel.Power)
            </td>
               <td>
                @Html.DisplayFor(modelItem => item.EngineModel.NumberCylinders)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineModel.FuelType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GearBoxType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
