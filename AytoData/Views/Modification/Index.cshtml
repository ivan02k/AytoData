@model IEnumerable<Data.Entities.Modification>

@{
    ViewData["Title"] = "Index";
}

<h1>Modifications</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Modification</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Generation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GearBoxType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Generation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineModel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GearBoxType.Name)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
